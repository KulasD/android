<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000000">

    <Button
        android:id="@+id/friendly_wifis_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:text="Choose Wifis" />

    <TextView
        android:id="@+id/position_name"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/calibratebutton"
        android:layout_alignTop="@+id/friendly_wifis_button"
        android:layout_marginStart="-392dp"
        android:layout_marginTop="9dp"
        android:ems="10"
        android:hint="Choose pin and calibrate"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <Button
        android:id="@+id/calibratebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/friendly_wifis_button"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="550dp"
        android:layout_marginTop="0dp"
        android:enabled="false"
        android:text="Calibrate" />


    <com.zechassault.zonemap.view.ImageMapView
        android:id="@+id/imageMapViewFront"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:layout_below="@+id/calibratebutton"
        android:src="@drawable/background" />


</RelativeLayout>